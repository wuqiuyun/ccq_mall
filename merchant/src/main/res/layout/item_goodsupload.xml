<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="12dp"
                android:background="@drawable/gear_image_default"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pro_name_tv"
                    style="@style/text_normal"
                    android:text="名称"
                    android:textSize="@dimen/app_text_body" />

                <TextView
                    android:id="@+id/pro_price_tv"
                    style="@style/text_normal"
                    android:layout_marginTop="5dp"
                    android:text="原价："
                    android:textColor="@color/app_text_gray_normal"
                    android:textSize="@dimen/app_text_caption" />

                <TextView
                    android:id="@+id/pro_sale_tv"
                    style="@style/text_normal"
                    android:layout_marginTop="5dp"
                    android:text="默认销售量："
                    android:textColor="@color/app_text_gray_normal"
                    android:textSize="@dimen/app_text_caption" />

                <TextView
                    android:id="@+id/pro_time_tv"
                    style="@style/text_normal"
                    android:layout_marginTop="5dp"
                    android:text="上传时间："
                    android:textColor="@color/app_text_gray_normal"
                    android:textSize="@dimen/app_text_caption" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:id="@+id/delete_tv"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_margin="8dp"
                android:layout_marginLeft="8dp"
                android:background="@mipmap/ksc"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="删除"
                android:textSize="@dimen/ui_26_px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/edit_tv"
                style="@style/btn_normal"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="修改"
                android:textSize="@dimen/ui_26_px"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/no_delete_tv"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_margin="8dp"
                android:layout_marginLeft="8dp"
                android:background="@mipmap/bksc"
                android:gravity="center"
                android:textColor="@color/app_white"
                android:text="删除"
                android:textSize="@dimen/ui_26_px" />
            <TextView
                android:id="@+id/no_edit_tv"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_margin="8dp"
                android:layout_marginLeft="8dp"
                android:background="@mipmap/bksc"
                android:gravity="center"
                android:textColor="@color/app_white"
                android:text="修改"
                android:textSize="@dimen/ui_26_px" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_divider"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
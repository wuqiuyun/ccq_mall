<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/adv_framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <per.sue.gear2.widget.flow.CircleFlowIndicator
                        android:id="@+id/circle_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                        app:activeColor="@color/app_white"
                        app:inactiveColor="#dddddd"
                        app:radius2="4dp" />

                    <per.sue.gear2.widget.flow.ViewFlowFixViewPager
                        android:id="@+id/view_flow"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/edit_img_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="23dp"
                    android:src="@mipmap/ic_edit" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ads_text_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/app_white"
                    android:gravity="top"
                    android:hint="请输入入口广告"
                    android:minLines="3"
                    android:padding="8dp"
                    android:textSize="@dimen/ui_30_px" />

                <View style="@style/line_view_vertical" />

                <View style="@style/line_view_vertical" />

                <TextView
                    android:id="@+id/edit_ads_text_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/app_horizontal_margin"
                    android:layout_marginRight="@dimen/app_horizontal_margin"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_squ_r4_white_b_gray"
                    android:gravity="center"
                    android:text="   主打优惠活动（商家入口广告） "
                    android:textColor="@color/charts_gray"
                    android:textSize="@dimen/ui_30_px" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="商家外部环境图"
                    android:textColor="@color/charts_gray"
                    android:textSize="@dimen/ui_28_px" />

                <TextView
                    android:id="@+id/tv_edit_hj"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:text="添加/修改"
                    android:textColor="@color/charts_red"
                    android:textSize="@dimen/ui_28_px"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hj_first"
                        android:layout_width="110dip"
                        android:layout_height="80dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_hj_first_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hj_second"
                        android:layout_width="110dip"
                        android:layout_height="80dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_hj_second_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hj_three"
                        android:layout_width="110dip"
                        android:layout_height="80dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_hj_three_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hj_four"
                        android:layout_width="110dip"
                        android:layout_height="80dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_hj_four_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hj_five"
                        android:layout_width="110dip"
                        android:layout_height="80dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_hj_five_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hj_six"
                        android:layout_width="110dip"
                        android:layout_height="80dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_hj_six_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>

            </LinearLayout>


            <View style="@style/line_view_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="商家内部环境图"
                    android:textColor="@color/charts_gray"
                    android:textSize="@dimen/ui_28_px" />

                <TextView
                    android:id="@+id/tv_edit_nb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:text="添加/修改"
                    android:textColor="@color/charts_red"
                    android:textSize="@dimen/ui_28_px"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_nb_first"
                        android:layout_width="110dip"
                        android:layout_height="80dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_nb_first_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_nb_second"
                        android:layout_width="110dip"
                        android:layout_height="80dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_nb_second_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_nb_three"
                        android:layout_width="110dip"
                        android:layout_height="80dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_nb_three_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line_view_vertical" />

            <View
                style="@style/line_view_vertical"
                android:layout_height="5dp"
                android:background="@color/activity_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="资质/荣誉"
                    android:textColor="@color/charts_gray"
                    android:textSize="@dimen/ui_28_px" />

                <TextView
                    android:id="@+id/tv_edit_zz"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:text="添加/修改"
                    android:textColor="@color/charts_red"
                    android:textSize="@dimen/ui_28_px"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_zz_first"
                        android:layout_width="141dip"
                        android:layout_height="109dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_zz_first_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_zz_second"
                        android:layout_width="141dip"
                        android:layout_height="109dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_zz_second_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/line_view_vertical"
                android:layout_height="5dp"
                android:background="@color/activity_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="商家列表缩略图"
                    android:textColor="@color/charts_gray"
                    android:textSize="@dimen/ui_28_px" />

                <TextView
                    android:id="@+id/tv_edit_store_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:text="添加/修改"
                    android:textColor="@color/charts_red"
                    android:textSize="@dimen/ui_28_px"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_sn_first"
                        android:layout_width="135dip"
                        android:layout_height="120dip"
                        android:background="@drawable/gear_image_default"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/image_sn_first_btn"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/gear_selector_primary"
                        android:gravity="center"
                        android:text="添加/修改"
                        android:textColor="@color/app_white" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/submit_editpic_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/gear_selector_squ_primary"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/app_white" />

</LinearLayout>
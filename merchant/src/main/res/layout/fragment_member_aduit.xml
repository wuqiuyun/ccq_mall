<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/app_vertical_margin"
    android:paddingLeft="@dimen/app_horizontal_margin"
    android:paddingRight="@dimen/app_horizontal_margin"
    android:paddingTop="@dimen/app_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/app_horizontal_margin"
            android:background="@drawable/gear_shape_squ_r8_b_primary_transparents"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="注册会员"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/ui_28_px"

                />

            <TextView
                android:id="@+id/regist_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/ui_28_px" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/app_horizontal_margin"
            android:background="@drawable/gear_shape_squ_r8_b_primary_transparents"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="VIP会员"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/ui_28_px" />

            <TextView
                android:id="@+id/vip_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/ui_28_px" />


        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/to_apply_btn"
        style="@style/btn_larger"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="申请开通增值服务"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/aduit_process_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功能正在审核中, 请稍等..." />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aduit_result_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/reson_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的申请已被拒绝，签名包含有敏感字符或过长" />


        <Button
            android:id="@+id/again_apply_btn"
            style="@style/btn_larger"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:text="重新申请" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="目前只开放了短信群发功能, 更多陆续开放, 攻城狮, 程序媴在不断努力中, 敬请等待."
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/app_text_caption" />

</RelativeLayout>
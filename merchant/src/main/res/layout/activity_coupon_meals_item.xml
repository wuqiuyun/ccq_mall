<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <LinearLayout
        style="@style/item_setting_normal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/category_1_tv"
            style="@style/text_normal"
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/ic_triangle_gray"
            android:gravity="center"
            android:hint="请选择"
            android:paddingRight="4dp"
            android:textSize="@dimen/ui_28_px" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/category_2_tv"
            style="@style/text_normal"
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/ic_triangle_gray"
            android:gravity="center"
            android:hint="请选择"
            android:paddingRight="4dp"
            android:textSize="@dimen/ui_28_px" />

    </LinearLayout>

    <LinearLayout
        style="@style/item_setting_normal"
        android:background="@color/activity_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            style="@style/text_normal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="可选"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/count_tv"
            style="@style/text_normal"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:hint=""
            android:paddingRight="4dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_26_px" />


        <TextView
            style="@style/text_normal"
            android:layout_marginLeft="8dp"
            android:text="选"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/choose_tv"
            style="@style/text_normal"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/shape_squ_white_primery"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/ic_triangle_cp"
            android:gravity="center"
            android:paddingRight="4dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_26_px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_squ_white_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/category_3_tv"
            style="@style/text_normal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_triangle_gray"
            android:gravity="center"
            android:hint="请选择"
            android:textColor="@color/app_text_black_normal"
            android:textSize="@dimen/ui_28_px" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.cjj.MaterialRefreshLayout
            android:id="@id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"></ListView>
        </com.cjj.MaterialRefreshLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/real_ysz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_ysz"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gear_gray"
            android:gravity="center"
            android:text="设置详情"
            android:textColor="@color/charts_white"
            android:textSize="@dimen/ui_32_px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/newspaper" />
    </RelativeLayout>

</LinearLayout>
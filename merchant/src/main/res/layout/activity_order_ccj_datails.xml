<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_white"

    >
    
    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="@dimen/app_horizontal_margin"
        android:paddingRight="@dimen/app_horizontal_margin"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gear_image_default"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/goods_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/app_horizontal_margin"
            android:textSize="@dimen/ui_32_px"
            android:text="xx"
            />


    </LinearLayout>

    <View style="@style/line_view_vertical"
        android:layout_below="@+id/top_ll"/>


    <TableLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_ll"

        android:paddingLeft="@dimen/app_horizontal_margin"
        android:paddingRight="@dimen/app_horizontal_margin"
        android:paddingTop="@dimen/app_vertical_margin"
        android:paddingBottom="@dimen/app_vertical_margin"
        >

        <TableRow>

            <TextView style="@style/text_normal"
                android:text="订单号："
                />
            <TextView
                android:id="@+id/order_num_tv"
                style="@style/text_body_normal"
                android:textColor="@color/app_text_gray_normal"
                android:text="123456789"
                />


        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            >

            <TextView style="@style/text_normal"
                android:text="用户名："
                />
            <TextView
                android:id="@+id/user_name_tv"
                style="@style/text_body_normal"
                android:textColor="@color/app_text_gray_normal"
                android:text="123456789"
                />


        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            >

            <TextView style="@style/text_normal"
                android:text="销售金额："
                />
            <TextView
                android:id="@+id/consmue_pay_tv"
                style="@style/text_body_normal"
                android:textColor="@color/colorPrimary"
                android:text="￥1000"
                />


        </TableRow>


        <TableRow
            android:layout_marginTop="10dp"
            >

            <TextView style="@style/text_normal"
                android:text="折扣："
                />
            <TextView
                android:id="@+id/percent_tv"
                style="@style/text_body_normal"
                android:textColor="@color/colorPrimary"
                android:text="8.8折"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            >

            <TextView style="@style/text_normal"
                android:text="收取现金："
                />
            <TextView
                android:id="@+id/shou_pay_tv"
                style="@style/text_body_normal"
                android:textColor="@color/colorPrimary"
                android:text="￥1000"
                />


        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            >

            <TextView style="@style/text_normal"
                android:text="餐餐抢券码："
                />
            <TextView
                android:id="@+id/code_tv"
                style="@style/text_body_normal"
                android:textColor="@color/app_text_gray_normal"
                android:text="123456"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            >

            <TextView style="@style/text_normal"
                android:text="购买时间："
                />
            <TextView
                android:id="@+id/time_tv"
                style="@style/text_body_normal"
                android:textColor="@color/app_text_gray_normal"
                android:text="2016-02-19"
                />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            >

            <TextView style="@style/text_normal"
                android:text="商家地址："
                />
            <TextView
                android:id="@+id/adress_tv"
                style="@style/text_body_normal"
                android:textColor="@color/app_text_gray_normal"
                android:text="XXXXXXXXXXXXXX"
                />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/content_ll"
        android:layout_marginTop="@dimen/app_vertical_margin"
        >

        <TextView
            android:id="@+id/verify_status_tv"
            style="@style/text_normal"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"

            android:text="验证"
            />



    </LinearLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_white"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/app_horizontal_margin"
        android:paddingRight="@dimen/app_horizontal_margin"
        android:paddingTop="@dimen/app_vertical_margin">

        <ImageView
            android:id="@+id/goods_image_iv"
            android:layout_width="88dp"
            android:layout_height="99dp"
            android:src="@drawable/gear_image_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小白菜"
                android:textSize="@dimen/ui_32_px" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_original_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="原价: 10元"
                    android:textColor="@color/app_text_gray_normal"
                    android:textSize="@dimen/ui_30_px" />

                <TextView
                    android:id="@+id/zhekou_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/charts_red"
                    android:textSize="@dimen/ui_30_px" />
            </LinearLayout>

            <TextView
                android:id="@+id/price_store_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="到店价: 10元"
                android:textColor="@color/app_text_gray_normal"
                android:textSize="@dimen/ui_30_px" />

            <TextView
                android:id="@+id/unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="库存: 0"
                android:textColor="@color/app_text_gray_normal"
                android:textSize="@dimen/ui_30_px" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/ads_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_horizontal_margin"
        android:layout_marginRight="@dimen/app_horizontal_margin"
        android:text="号外走过"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/ui_28_px" />

    <View
        style="@style/line_view_vertical"
        android:layout_marginTop="10dp" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="right"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/xiajia_btn"
            style="@style/btn_primary"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/edit_btn"
            android:gravity="center"
            android:text="下架"
            android:textSize="@dimen/ui_26_px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/edit_kc_btn"
            style="@style/btn_primary"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/xiajia_btn"
            android:gravity="center"
            android:text="修改库存"
            android:textSize="@dimen/ui_26_px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/edit_btn"
            style="@style/btn_primary"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="修改"
            android:textSize="@dimen/ui_26_px" />


        <TextView
            android:id="@+id/edit_shangjiabtn"
            style="@style/btn_primary"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_toLeftOf="@+id/delete_btn"
            android:gravity="center"
            android:text="修改并重新上架"
            android:textSize="@dimen/ui_26_px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/delete_btn"
            style="@style/btn_primary"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="删除"
            android:textSize="@dimen/ui_26_px"
            android:visibility="gone" />
        <TextView
            android:id="@+id/edit_lookjujuereasonbtn"
            style="@style/btn_primary"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_toLeftOf="@+id/delete_btn"
            android:gravity="center"
            android:text="查看拒绝理由"
            android:textSize="@dimen/ui_26_px"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
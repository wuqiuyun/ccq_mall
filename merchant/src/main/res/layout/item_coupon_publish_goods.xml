<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/app_vertical_margin"
    android:paddingBottom="@dimen/app_vertical_margin"
    android:background="@color/app_white"
    >

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/selector_ck_tick"
        android:drawablePadding="4dp"
        android:button="@null"
        android:layout_margin="8dp"
        android:gravity="center"
        />
    
    <ImageView
        android:id="@+id/goods_image_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/gear_image_default"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="4dp"
        >
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小白菜"
            android:textSize="@dimen/ui_26_px"
            />

        <TextView
            android:id="@+id/price_store_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门店价: 10元"
            android:textSize="@dimen/ui_26_px"
            />


        <TextView
            android:id="@+id/price_mall_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商城价: 10元"
            android:textSize="@dimen/ui_26_px"
            />

        <TextView
            android:id="@+id/unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格: 条"
            android:textSize="@dimen/ui_26_px"
            />


    </LinearLayout>

</LinearLayout>
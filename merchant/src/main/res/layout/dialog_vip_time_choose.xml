<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/dklj"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/year_et"
                android:layout_width="65dip"
                android:layout_height="wrap_content"
                android:background="@mipmap/outs"
                android:gravity="center"
                android:hint="例:2017"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="@dimen/app_text_caption" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="年"
                android:textColor="@color/charts_black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mon_et"
                android:layout_width="65dip"
                android:layout_height="wrap_content"
                android:background="@mipmap/outs"
                android:gravity="center"
                android:hint="例:6"
                android:inputType="number"
                android:maxLength="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:hint="05"
                android:text="月"
                android:textColor="@color/charts_black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/day_et"
                android:layout_width="65dip"
                android:layout_height="wrap_content"
                android:background="@mipmap/outs"
                android:gravity="center"
                android:hint="例:5"
                android:inputType="number"
                android:maxLength="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="日"
                android:textColor="@color/charts_black"
                android:textSize="18sp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_divider" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/app_blue_light"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/app_divider" />

            <TextView
                android:id="@+id/tv_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="放弃"
                android:textColor="@color/app_blue_light"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
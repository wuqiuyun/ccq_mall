<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/app_horizontal_margin"
        android:paddingRight="@dimen/app_horizontal_margin"
        android:paddingTop="@dimen/app_vertical_margin"
        android:paddingBottom="@dimen/app_vertical_margin"
        >

        <TableRow
            >

            <TextView
                android:id="@+id/position_tv"
                style="@style/text_normal"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:textColor="@color/app_text_gray_normal"
                android:text="营业员"
                android:gravity="left|center_vertical"
                />


        </TableRow>

        <TableRow
            android:layout_marginTop="8dp"
            >

            <TextView
                style="@style/text_normal"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:textColor="@color/app_text_gray_normal"
                android:text="姓名: "
                android:gravity="left|center_vertical"
                />
            <TextView
                android:id="@+id/name_tv"
                style="@style/text_normal"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/app_text_gray_normal"
                android:text="商家名称"
                android:gravity="left|center_vertical"
                />

        </TableRow>
        <TableRow
            android:layout_marginTop="8dp"
            >

            <TextView
                style="@style/text_normal"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:textColor="@color/app_text_gray_normal"
                android:text="账号: "
                android:gravity="left|center_vertical"
                />
            <TextView
                android:id="@+id/account_tv"
                style="@style/text_normal"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/app_text_gray_normal"
                android:text="VIP"
                android:gravity="left|center_vertical"
                />

        </TableRow>

        <TableRow
            android:layout_marginTop="8dp"
            >

            <TextView
                style="@style/text_normal"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:textColor="@color/app_text_gray_normal"
                android:text="联系电话: "
                android:gravity="left|center_vertical"
                />
            <TextView
                android:id="@+id/mobile_tv"
                style="@style/text_normal"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="@color/app_text_gray_normal"
                android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                />

        </TableRow>


    </TableLayout>

    <View style="@style/line_view_vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/delete_btn"
            style="@style/btn_normal"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/app_horizontal_margin"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/ui_30_px"
            android:text="删除"
            />

        <TextView
            android:id="@+id/edit_btn"
            style="@style/btn_normal"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/app_horizontal_margin"
            android:layout_toLeftOf="@+id/delete_btn"
            android:textSize="@dimen/ui_30_px"
            android:text="修改"
            />
    </RelativeLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        >
        
        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/gear_image_default3"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/merchant_name_tv"
            style="@style/text_normal"
            android:text="商家名称"
            android:layout_toRightOf="@+id/image_iv"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:textColor="#848484"
            android:layout_toLeftOf="@+id/merchant_status_tv"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/merchant_status_tv"
            style="@style/text_normal"
            android:text="未审核"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/app_text_caption"
            android:textColor="@color/app_text_orange_status"
            />

        <TextView
            android:id="@+id/merchant_account_tv"
            style="@style/text_normal"
            android:text="商家账号"
            android:textColor="#848484"
            android:layout_below="@+id/merchant_name_tv"
            android:layout_alignLeft="@+id/merchant_name_tv"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/app_text_caption"
            />
        <TextView
            android:id="@+id/merchant_address_tv"
            style="@style/text_normal"
            android:text="地址: 无"
            android:layout_width="match_parent"
            android:layout_below="@+id/merchant_member_num_tv"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#848484"
            android:layout_alignLeft="@+id/merchant_name_tv"
            android:textSize="@dimen/app_text_caption"
            />
        <TextView
            android:id="@+id/merchant_member_num_tv"
            style="@style/text_normal"
            android:text="注册会员: 300名"
            android:textSize="@dimen/app_text_caption"
            android:layout_marginTop="4dp"
            android:textColor="#848484"
            android:layout_below="@+id/merchant_account_tv"
            android:layout_alignLeft="@+id/merchant_name_tv"
            />

        <TextView
            android:id="@+id/merchant_member_vip_num_tv"
            style="@style/text_normal"
            android:text="VIP会员: 300名"
            android:textSize="@dimen/app_text_caption"
            android:textColor="#848484"
            android:layout_marginTop="4dp"

            android:layout_below="@+id/merchant_account_tv"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <View style="@style/line_view_vertical"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="50dp"
        >

        <TextView
            android:id="@+id/merchant_date_tv"
            style="@style/text_normal"
            android:text="提交时间"
            android:layout_centerVertical="true"

            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/merchant_det_tv"
            style="@style/text_normal"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:minWidth="70dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/selector_squ_border_r4_primary"
            android:text="查看"/>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"

    >

    <TextView
        style="@style/text_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/activity_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/app_horizontal_margin"
        android:paddingRight="@dimen/app_horizontal_margin"
        android:text="上传基本图片" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_id_front_iv"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_id_front" />

                <Button
                    android:id="@+id/img_id_front_btn"
                    android:layout_width="110dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gear_selector_white"
                    android:gravity="center"
                    android:text="上传正面" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_id_back_iv"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_id_back" />

                <Button
                    android:id="@+id/img_id_back_btn"
                    android:layout_width="110dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gear_selector_white"
                    android:text="上传反面" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_license_iv"
                android:layout_width="141dp"
                android:layout_height="109dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_merchant_license" />

            <Button
                android:id="@+id/img_license_btn"
                android:layout_width="110dp"
                android:layout_height="33dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gear_selector_white"
                android:text="营业执照"
                android:gravity="center" />

        </LinearLayout>

        <View style="@style/line_view_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_zzzj_iv"
                android:layout_width="141dp"
                android:layout_height="109dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gear_image_default" />

            <Button
                android:id="@+id/img_zzzj_btn"
                android:layout_width="110dp"
                android:layout_height="33dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gear_selector_white"
                android:text="资质证件"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/text_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/activity_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/app_horizontal_margin"
        android:paddingRight="@dimen/app_horizontal_margin"
        android:text="商家轮播图"
        android:id="@+id/textView2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_banner_iv"
            android:layout_width="match_parent"
            android:layout_height="180dip"
            android:background="@drawable/gear_image_default"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/img_scbanner_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/upload"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"/>
    </RelativeLayout>

    <TextView
        style="@style/text_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/activity_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/app_horizontal_margin"
        android:paddingRight="@dimen/app_horizontal_margin"
        android:text="商家首图" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_snt_iv"
            android:layout_width="108dp"
            android:layout_height="96dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gear_image_default" />

        <Button
            android:id="@+id/img_snt_btn"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gear_selector_white"
            android:text="上传"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        style="@style/text_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/app_horizontal_margin"
        android:paddingRight="@dimen/app_horizontal_margin"
        android:text="商家外部环境图" />

    <TextView
        style="@style/text_caption_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/app_horizontal_margin"
        android:paddingRight="@dimen/app_horizontal_margin"
        android:text="可登录商家APP或PC添加更多图片"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_merchant_first_iv"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gear_image_default" />

            <Button
                android:id="@+id/img_merchant_first_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gear_selector_primary"
                android:gravity="center"
                android:text="上传"
                android:textColor="@color/app_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_merchant_second_iv"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gear_image_default" />

            <Button
                android:id="@+id/img_merchant_second_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gear_selector_primary"
                android:gravity="center"
                android:text="上传"
                android:textColor="@color/app_white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_merchant_third_iv"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gear_image_default" />

            <Button
                android:id="@+id/img_merchant_third_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gear_selector_primary"
                android:gravity="center"
                android:text="上传"
                android:textColor="@color/app_white" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/app_horizontal_margin"
        android:paddingRight="@dimen/app_horizontal_margin"
        android:text="商家内部环境图" />

    <TextView
        style="@style/text_caption_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/app_horizontal_margin"
        android:paddingRight="@dimen/app_horizontal_margin"
        android:text="干净卫生, 是我们生活的追求"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_kitchen_first_iv"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gear_image_default" />

            <Button
                android:id="@+id/img_kitchen_first_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gear_selector_primary"
                android:text="上传"
                android:gravity="center"
                android:textColor="@color/app_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_kitchen_second_iv"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gear_image_default" />

            <Button
                android:id="@+id/img_kitchen_second_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gear_selector_primary"
                android:text="上传"
                android:gravity="center"
                android:textColor="@color/app_white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_kitchen_third_iv"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gear_image_default" />

            <Button
                android:id="@+id/img_kitchen_third_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gear_selector_primary"
                android:text="上传"
                android:gravity="center"
                android:textColor="@color/app_white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
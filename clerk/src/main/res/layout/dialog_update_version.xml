<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    >


    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="300dp"

        >
        <RelativeLayout
            android:id="@+id/bg_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:background="@drawable/bg_update_version"
            >

            <TextView
                android:id="@+id/describe_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/app_text_gray_normal"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/app_horizontal_margin"
                android:layout_marginRight="@dimen/app_horizontal_margin"
                android:layout_above="@+id/submit_btn"
                android:text="11"
                />



            <TextView
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/gear_tab_bg"
                android:text="升级"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_update_close"
           android:layout_alignParentRight="true"
            android:layout_marginTop="38dp"
            />

    </RelativeLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textSize="16sp"
        android:textColor="@color/charts_black"
        android:layout_margin="16dp"/>
    <View
        style="@style/line_view_vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码："
            android:textSize="16sp"
            android:textColor="@color/charts_black"
            android:layout_marginLeft="16dp"/>
            <EditText
                android:id="@+id/old_password_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="numberPassword"
                android:layout_marginLeft="5dp"
                android:maxLength="16"/>
        </LinearLayout>
        <View
            style="@style/line_view_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新密码："
                android:textSize="16sp"
                android:textColor="@color/charts_black"
                android:layout_marginLeft="16dp"/>
            <EditText
                android:id="@+id/new_password_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="numberPassword"
                android:layout_marginLeft="5dp"
                android:maxLength="16"/>
        </LinearLayout>
        <View
            style="@style/line_view_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重复密码："
                android:textSize="16sp"
                android:textColor="@color/charts_black"
                android:layout_marginLeft="16dp"/>
            <EditText
                android:id="@+id/new_again_password_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="numberPassword"
                android:layout_marginLeft="5dp"
                android:maxLength="16"/>

        </LinearLayout>
        <View
            style="@style/line_view_vertical"/>
    </LinearLayout>
    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="@dimen/app_horizontal_margin"
        android:layout_marginRight="@dimen/app_horizontal_margin"
        android:background="@drawable/gear_selector_primary"
        android:textColor="@color/app_white"
        android:textSize="16sp"
        android:text="完成"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清理缓存"
        android:textSize="16sp"
        android:textColor="@color/charts_gray"
        android:gravity="center"
        android:layout_marginTop="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0M"
        android:textSize="16sp"
        android:textColor="@color/charts_gray"
        android:gravity="center"
        android:layout_marginTop="5dp"/>
</LinearLayout>
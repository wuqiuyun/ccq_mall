<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/merchant_date_tv"
            style="@style/text_normal"
            android:text="添加时间"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            />


        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/gear_image_default3"
            android:layout_below="@+id/merchant_date_tv"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/merchant_name_tv"
            style="@style/text_normal"
            android:text="商家名称"
            android:layout_toRightOf="@+id/image_iv"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/merchant_date_tv"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/merchant_status_tv"
            android:ellipsize="end"
            />




        <TextView
            android:id="@+id/merchant_address_tv"
            style="@style/text_normal"
            android:text="地址: 无"
            android:layout_width="match_parent"
            android:layout_below="@+id/merchant_name_tv"
            android:layout_marginTop="11dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_alignLeft="@+id/merchant_name_tv"
            android:textSize="@dimen/app_text_caption"
            />
        <TextView
            android:id="@+id/merchant_member_num_tv"
            style="@style/text_normal"
            android:text="注册会员: 300名"
            android:textSize="@dimen/app_text_caption"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/merchant_address_tv"
            android:layout_alignLeft="@+id/merchant_name_tv"
            />

        <TextView
            android:id="@+id/merchant_member_vip_num_tv"
            style="@style/text_normal"
            android:text="VIP会员: 0名"
            android:textSize="@dimen/app_text_caption"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/merchant_address_tv"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>




</LinearLayout>
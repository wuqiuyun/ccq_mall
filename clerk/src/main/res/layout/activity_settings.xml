<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg">

    <TextView
        style="@style/text_normal"
        android:text="修改密码"
        android:gravity="center"
        android:layout_marginLeft="@dimen/app_horizontal_margin"
        android:layout_height="50dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:background="@color/app_white"
            >
            <TextView
                style="@style/text_normal"
                android:text="原始密码"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="@dimen/app_horizontal_margin"
                android:layout_height="50dp"
                />
            <EditText
                android:id="@+id/orginal_password_et"
                style="@style/edit_normal"
                android:hint="请输入原始密码"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/app_horizontal_margin"
                android:layout_marginRight="@dimen/app_horizontal_margin"
                android:layout_height="50dp"
                />

        </TableRow>

        <View style="@style/line_view_vertical"/>
        <TableRow
            android:background="@color/app_white"
            >
            <TextView
                style="@style/text_normal"
                android:text="新密码"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="@dimen/app_horizontal_margin"
                android:layout_height="50dp"
                />
            <EditText
                android:id="@+id/new_password_et"
                style="@style/edit_normal"
                android:hint="请输入新密码"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/app_horizontal_margin"
                android:layout_marginRight="@dimen/app_horizontal_margin"
                android:layout_height="50dp"
                />

        </TableRow>
        <View style="@style/line_view_vertical"/>
        <TableRow
            android:background="@color/app_white"
            >
            <TextView
                style="@style/text_normal"
                android:text="重复密码"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="@dimen/app_horizontal_margin"
                android:layout_height="50dp"
                />
            <EditText
                android:id="@+id/re_password_et"
                style="@style/edit_normal"
                android:hint="请输入重复密码"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/app_horizontal_margin"
                android:layout_marginRight="@dimen/app_horizontal_margin"
                android:layout_height="50dp"
                />

        </TableRow>
        <View style="@style/line_view_vertical"/>
    </TableLayout>
    
    <TextView
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:textColor="@color/app_white"
        android:layout_marginTop="35dp"
        android:background="@drawable/gear_selector_primary"
        android:layout_marginLeft="@dimen/app_horizontal_margin"
        android:layout_marginRight="@dimen/app_horizontal_margin"
        android:text="完成"
        />


    <LinearLayout
        android:id="@+id/clean_ll"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:layout_gravity="center"
        android:background="@drawable/gear_tab_bg"
        >

        <TextView
            style="@style/text_caption_normal"
            android:text="清理缓存"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <TextView
            android:id="@+id/clean_tv"
            style="@style/text_caption_normal"
            android:text="0M"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

    </LinearLayout>

</LinearLayout>
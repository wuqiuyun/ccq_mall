<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg">

    <ImageView
        android:id="@+id/qr_iv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/gear_image_default3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />
    
    <TextView
        android:id="@+id/down_share_tv"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="邀请朋友"
        android:gravity="center"
        android:textSize="@dimen/ui_36_px"
        android:layout_below="@+id/qr_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_squ_r4_white_b_gray"
        />

    <TextView
        android:id="@+id/check_version_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/app_horizontal_margin"
        android:layout_marginRight="@dimen/app_horizontal_margin"
        android:text="版本更新"
        android:textSize="@dimen/ui_36_px"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:textColor="@color/app_white"
        android:layout_above="@+id/agreemenet_tv"
        android:background="@drawable/gear_selector_primary"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/agreemenet_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/app_horizontal_margin"
        android:layout_marginRight="@dimen/app_horizontal_margin"
        android:text="餐餐抢商家协议"
        android:textSize="@dimen/ui_36_px"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/shape_squ_b_cp"
        android:visibility="gone"/>

</RelativeLayout>
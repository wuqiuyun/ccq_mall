<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dip"
    android:background="@color/gear_white"
    android:paddingTop="5dip"
    android:paddingBottom="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:minWidth="320dip"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dip"
                android:text="年"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        <antistatic.spinnerwheel.WheelVerticalView
            android:id="@+id/wheel_startdate_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:selectionDivider="@color/gear_gray"
            app:selectionDividerActiveAlpha="255"
            app:selectionDividerDimmedAlpha="255"
             app:selectionDividerHeight="1dp"
            app:visibleItems="4" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dip"
                android:text="月"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

        <antistatic.spinnerwheel.WheelVerticalView
            android:id="@+id/wheel_startdate_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            app:selectionDivider="@color/gear_gray"
            app:selectionDividerActiveAlpha="255"
            app:selectionDividerDimmedAlpha="255"
            app:selectionDividerHeight="1dp"
            app:visibleItems="4" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dip"
                android:text="日"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        <antistatic.spinnerwheel.WheelVerticalView
            android:id="@+id/wheel_startdate_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            app:selectionDivider="@color/gear_gray"
            app:selectionDividerActiveAlpha="255"
            app:selectionDividerDimmedAlpha="255"
             app:selectionDividerHeight="1dp"
            app:visibleItems="4" />


         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dip"
                android:text="时"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <antistatic.spinnerwheel.WheelVerticalView
                android:id="@+id/wheel_startdate_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:selectionDivider="@color/gear_gray"
                app:selectionDividerActiveAlpha="255"
                app:selectionDividerDimmedAlpha="255"
                 app:selectionDividerHeight="1dp"
                app:visibleItems="4" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dip"
                android:text="分"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <antistatic.spinnerwheel.WheelVerticalView
                android:id="@+id/wheel_startdate_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:selectionDivider="@color/gear_gray"
                app:selectionDividerActiveAlpha="255"
                app:selectionDividerDimmedAlpha="255"
                 app:selectionDividerHeight="1dp"
                app:visibleItems="4" />


        </LinearLayout>

    </LinearLayout>



    </LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--动画-->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/gear_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/gear_push_bottom_out</item>
    </style>

    <!--custom 对话框  start-->
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item><!--  去除黑色边框的关键设置项 -->
    </style>
    <style name="SjzhDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item><!--  去除黑色边框的关键设置项 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">LineScaleIndicator</item>
    </style>

    <!--常用间隔样式-->
    <style name="line_view_vertical">
        <item name="android:background">@color/app_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="line_view_horizontal">
        <item name="android:background">@color/app_divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="gear_setting_item">
        <item name="android:background">@drawable/gear_tab_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <style name="gear_simple_list_view">
        <item name="android:background">@color/app_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/app_divider</item>
        <item name="android:listSelector">@drawable/gear_tab_bg</item>
    </style>
</resources>
